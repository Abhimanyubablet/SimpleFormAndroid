<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".relative1">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/medical"
            app:title="Medica" />
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="#FF3700B3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/medica_logo" />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/img1"
            android:layout_marginTop="-100dp"
            android:text="Dr. Abhimanyu"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_name"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:layout_marginTop="-40dp"
            android:text="Pathology"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>


   <RelativeLayout
       android:id="@+id/rel_banner"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <ImageView
           android:id="@+id/image_banner"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/doctor"
           />


   </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_shape_layout"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_below="@id/rel_banner"
        android:background="#FF3700B3"
       android:layout_marginLeft="10dp"
        android:layout_marginTop="-260dp"
        >
       <ImageView
           android:id="@+id/add"
           android:layout_width="50dp"
           android:layout_height="500dp"
           android:src="@drawable/baseline_add_24"
           android:layout_marginTop="-80dp"
           android:layout_marginLeft="60dp"
           />

        <TextView
            android:id="@+id/add_textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_below="@+id/add"
            android:layout_marginTop="-120dp"
            android:textAlignment="center"
            android:text="Your Medical History"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_below="@+id/add_textView1"
            android:text="We value Your Privacy"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2_shape"
       android:layout_toRightOf="@+id/main_shape_layout"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:padding="10dp"
        android:layout_below="@id/rel_banner"
        android:background="#FF3700B3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-260dp"
        >
        <ImageView
            android:id="@+id/user"
            android:layout_width="50dp"
            android:layout_height="500dp"
            android:src="@drawable/user_circle_24"
            android:layout_marginTop="-80dp"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:id="@+id/user_textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_below="@+id/user"
            android:layout_marginTop="-100dp"
            android:textAlignment="center"
            android:text="Medical Consent Form"
            />
        <TextView
            android:id="@+id/user_textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_below="@+id/user_textView1"
            android:text="Please fill out this form"
            />

    </RelativeLayout>



    <RelativeLayout

        android:layout_toRightOf="@+id/relative3_shape"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:padding="10dp"
        android:layout_below="@id/rel_banner"
        android:background="#FF3700B3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-260dp"
        >
        <ImageView
            android:id="@+id/request_Image"
            android:layout_width="50dp"
            android:layout_height="500dp"
            android:src="@drawable/user_circle_24"
            android:layout_marginTop="-80dp"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:id="@+id/request_textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_below="@+id/request_Image"
            android:layout_marginTop="-100dp"
            android:textAlignment="center"
            android:text="Medical Consent Form"
            />
        <TextView
            android:id="@+id/request_textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_below="@+id/request_textview1"
            android:text="Please fill out this form"
            />

    </RelativeLayout>



</RelativeLayout>